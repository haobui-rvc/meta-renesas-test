From 724fe28b9024bfda2363c1a876da2ee419ca91f8 Mon Sep 17 00:00:00 2001
From: thongsyho <thong.ho.px@rvc.renesas.com>
Date: Tue, 10 Apr 2018 15:46:50 +0700
Subject: [PATCH 490/628] ARM: DTS: RZG1H r8a7742: Add PowerVR (SGX module)
 node to device tree

This patch support Renesas SGX kernel module probe

Signed-off-by: thongsyho <thong.ho.px@rvc.renesas.com>
Signed-off-by: vietn <vietn@fsoft.com.vn>
---
 arch/arm/boot/dts/r8a7742.dtsi | 10 ++++++++++
 1 file changed, 10 insertions(+)

diff --git a/arch/arm/boot/dts/r8a7742.dtsi b/arch/arm/boot/dts/r8a7742.dtsi
index 190809d..97db87e 100644
--- a/arch/arm/boot/dts/r8a7742.dtsi
+++ b/arch/arm/boot/dts/r8a7742.dtsi
@@ -651,6 +651,16 @@
 		#pwm-cells = <2>;
 	};
 
+	sgx@fd000000 {
+		compatible = "renesas,sgx";
+		reg = <0 0xfd000000 0 0x10000>;
+		interrupts = <0 119 IRQ_TYPE_LEVEL_HIGH>;
+		interrupt-names = "irq_sgx";
+		clocks = <&mstp1_clks R8A7742_CLK_3DG>;
+		clock-names = "sgx_clk";
+		power-domains = <&sysc R8A7742_PD_RGX>;
+	};
+
 	vspd0: vspd0@fe930000 {
 		compatible = "renesas,vsp2";
 		reg = <0 0xfe930000 0 0x7404>;
