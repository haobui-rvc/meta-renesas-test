From f2c9a0f77a25d3850363fe9617f94792dae0c611 Mon Sep 17 00:00:00 2001
From: Hung Dong <hung.dong.xd@rvc.renesas.com>
Date: Tue, 17 Apr 2018 18:47:24 +0700
Subject: [PATCH 526/628] ARM: DTS: iwg21m: enable LVDS-1 output to ch7036
 LVDS-to-HDMI converter

Signed-off-by: Hung Dong <hung.dong.xd@rvc.renesas.com>
Signed-off-by: vietn <vietn@fsoft.com.vn>
---
 arch/arm/boot/dts/r8a7742-iwg21m.dts | 35 +++++++++++++++++++++++++++++++++++
 1 file changed, 35 insertions(+)

diff --git a/arch/arm/boot/dts/r8a7742-iwg21m.dts b/arch/arm/boot/dts/r8a7742-iwg21m.dts
index bd3896f..1cd2648 100644
--- a/arch/arm/boot/dts/r8a7742-iwg21m.dts
+++ b/arch/arm/boot/dts/r8a7742-iwg21m.dts
@@ -153,6 +153,31 @@
 		};
 	};
 
+	panel_hdmi: panel@1 {
+		compatible = "simple-panel";
+
+		width-mm = <200>;
+		height-mm = <150>;
+
+		port {
+			panel_hdmi_input: endpoint {
+				remote-endpoint = <&du_out_lvds1>;
+			};
+		};
+
+		panel-timing {
+			clock-frequency = <65000000>;
+			hactive = <1024>;
+			vactive = <768>;
+			hfront-porch = <24>;
+			hback-porch = <296>;
+			hsync-len = <19>;
+			vfront-porch = <19>;
+			vback-porch = <32>;
+			vsync-len = <6>;
+		};
+	};
+
 	buzzer {
 		compatible = "pwm-backlight";
 		pwms = <&tpu 0 5000000 GPIO_ACTIVE_HIGH>;
@@ -450,6 +475,11 @@
 		VDDD-supply = <&reg_0p0v>;
 		clocks = <&x9_clk 1>;
 	};
+
+	ch7036@76 {
+		compatible = "cil,ch7036";
+		reg = <0x76>;
+	};
 };
 
 &i2c3 {
@@ -472,6 +502,11 @@
 				remote-endpoint = <&panel_input>;
 			};
 		};
+		port@1 {
+			endpoint {
+				remote-endpoint = <&panel_hdmi_input>;
+			};
+		};
 	};
 };
 
