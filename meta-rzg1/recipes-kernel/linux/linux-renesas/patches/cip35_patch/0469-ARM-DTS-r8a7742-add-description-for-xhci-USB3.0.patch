From 00e53419ded9d6edcb031ac90ca8b516362c1e61 Mon Sep 17 00:00:00 2001
From: Tin Le <tin.le.wh@rvc.renesas.com>
Date: Fri, 6 Apr 2018 11:18:37 +0700
Subject: [PATCH 469/628] ARM: DTS: r8a7742: add description for xhci USB3.0

Signed-off-by: Tin Le <tin.le.wh@rvc.renesas.com>
Signed-off-by: vietn <vietn@fsoft.com.vn>
---
 arch/arm/boot/dts/r8a7742.dtsi | 10 ++++++++++
 1 file changed, 10 insertions(+)

diff --git a/arch/arm/boot/dts/r8a7742.dtsi b/arch/arm/boot/dts/r8a7742.dtsi
index 1fd6c25..e90968b 100644
--- a/arch/arm/boot/dts/r8a7742.dtsi
+++ b/arch/arm/boot/dts/r8a7742.dtsi
@@ -634,6 +634,16 @@
 		};
 	};
 
+	xhci: xhci@ee000000 {
+		compatible = "renesas,xhci-r8a7742";
+		reg = <0 0xee000000 0 0xc00>;
+		interrupts = <0 101 IRQ_TYPE_LEVEL_HIGH>;
+		clocks = <&mstp3_clks R8A7742_CLK_SSUSB>;
+		phys = <&usb2 1>;
+		phy-names = "usb";
+		status = "disabled";
+	};
+
 	pci1: pci@ee0b0000 {
 		compatible = "renesas,pci-r8a7742";
 		device_type = "pci";
